<% # app/views/dashboard.html.erb %>


<table class="table table-striped text-center">
  <thead>
    <tr>
      <th scope="col" class="text-start">Produto</th>
      <th scope="col">Quantidade</th>
      <th scope="col">Total</th>
    </tr>
  </thead>
  <tbody>
    <% total_reais = 0 %>
    <% @itens_por_produto.each do |item| %>
        <tr>
        <td class="text-start"><%= Produto.find(item.produto_id).nome %></td>
        <td><%= item.quantidade_total %></td>
        <td>R$ <%= valor_com_duas_casas(item.total_reais) %></td>
        <% total_reais += item.total_reais %>
    <% end %>

    <tr>
      <th colspan="3"></th>
    </tr>
    <tr>
      <th colspan="2" class="text-start">Total</th>
      <td>R$ <%= valor_com_duas_casas(total_reais) %></td>
    </tr>
  </tbody>
</table>