<table class="table table-striped text-center">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col" class="text-start">Nome</th>
            <th scope="col">Itens</th>
            <th scope="col">Total</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        <% @vendas.each do |venda| %>
            <tr>
                <td>
                    <%= venda.id %>
                </td>
                <td class="text-start">
                    <%= venda.cliente %>
                </td>
                <td>
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Preço</th>
                                <th>Qtd</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% venda.itens.each do |item| %>
                            <tr>
                                <td><%= item.produto.nome %></td>
                                <td>R$ <%= item.preco_unitario %></td>
                                <td><%= item.quantidade %></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </td>

                <td>
                    R$ <%= venda.total %>
                </td>
                <td>
                    <div class="row">
                        <div class="col d-flex justify-content-center">
                        <%= link_to edit_venda_path(venda), class: "nav-link me-1" do %>
                            <i class="bi bi-pencil btn btn-warning"></i>
                        <% end %>
                        <%= button_to venda, method: :delete, class: "nav-link ms-1" do %>
                               <i class="bi bi-trash btn btn-danger"></i>
                        <% end %>
                    </div>
                </div>
            </td>
        <% end %>
    </tbody>
</table>