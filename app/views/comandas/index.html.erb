<div class="container-fluid">

<h1 class="display-5">Comandas</h1>

<div id="comandas" class="row pt-5">  
  <% @comandas.each do |comanda| %>
    <div class="col-sm-6 col-md-3 col-xl-2">
      <%= link_to comanda, class: "nav-link" do %>
        <div class="card mb-3" style="height: 150px;">
          <div class="card-body">
            
            <% unless comanda.nome.eql?("") %>
              <h5 class="card-title text-center" style="padding-top: 10px; padding-bottom: 20px;">N° <%= comanda.numero %></h5>
            <% else %>
              <h5 class="card-title text-center" style="padding-top: 10px; padding-bottom: 40px;">N° <%= comanda.numero %></h5>
            <% end %>
            
            <h6 class="card-subtitle mb-2 text-body-secondary text-center">
              <%= comanda.nome %>
            </h6>

            <h6 class="card-subtitle mb-2 text-body-secondary text-center">
              <span class="badge <%= status_comanda(comanda.status) %>">
                <%= comanda.status %>
              </span>
            </h6>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<%= render "partials/btn_floating", link: new_comanda_path, formato: "circle", cor: "primary" %>

<p style="color: green"><%= notice %></p>
</div>